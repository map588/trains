<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="Trains.trackModel" level="WARN"/>
    <logger name="CTCOffice" level="ERROR"/>
    <logger name="Trains.trainModel" level="INFO"/>
    <logger name="Trains.trainController" level="INFO"/>
    <logger name="waysideController" level="ERROR"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>